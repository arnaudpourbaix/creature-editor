<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="3 seconds">
	<contextName>creature-editor</contextName>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<jmxConfigurator />
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.pourbaix" level="ALL" />
	<!-- 
	<logger name="org.springframework.transaction" level="TRACE" />
	<logger name="org.hibernate.engine.transaction" level="TRACE" />
	<logger name="org.hibernate.internal" level="TRACE" />
	 -->
	
</configuration>

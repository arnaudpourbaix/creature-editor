{
  "name": "creature-editor",
  "version": "0.0.1",
  "description": "Creature Editor for Baldur's Gate EE",
  "scripts": {
    "build": "tsc --rootDir ./src/",
    "start": "ts-node-dev src/index.ts",
    "start:debug": "ts-node-dev --inspect=5858 src/index.ts",
    "debug": "ts-node-dev --inspect --respawn src/index.ts",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:debug": "mocha --inspect --debug-brk --not-timeouts --compilers ts:ts-node/register test/**/*.spec.ts",
    "pree2e": "ts-node scripts/start-test-db.ts",
    "e2e": "ts-node scripts/run-e2e.ts",
    "poste2e": "ts-node scripts/stop-test-db.ts"
  },
  "keywords": [],
  "dependencies": {
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.6",
    "typeorm": "^0.2.12",
    "typescript-ioc": "^1.2.4"
  },
  "author": "Arnaud Pourbaix",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.39",
    "@types/lodash": "^4.14.120",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.21",
    "@types/shelljs": "^0.8.2",
    "@types/sinon": "^7.0.5",
    "@types/sinon-chai": "^3.2.2",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "shelljs": "^0.8.3",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.4.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.1"
  }
}
